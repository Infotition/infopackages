{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "deploy": {
      "dependsOn": ["build", "lint", "test"],
      "outputs": ["package/**"],
      "inputs": ["src/**/*.(ts|tsx)"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**"],
      "inputs": ["src/**/*.(ts|tsx)"]
    },
    "test": {
      "outputs": [],
      "inputs": ["**/*.test.(ts|tsx)", "src/**/*.(ts|tsx)"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**/*.(ts|tsx)"]
    },
    "clean": { "outputs": [] },
    "docs": { "outputs": ["build/**"] }
  }
}
